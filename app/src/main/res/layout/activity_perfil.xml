<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundoperfil"
    tools:context=".Perfil">

    <View
        android:id="@+id/logincadastro2"
        android:layout_width="311dp"
        android:layout_height="258dp"
        android:background="@drawable/fundotxt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.551" />

    <Button
        android:id="@+id/BtnDoar"
        android:layout_width="193dp"
        android:layout_height="71dp"
        android:layout_marginStart="109dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="109dp"
        android:layout_marginBottom="28dp"
        android:backgroundTint="@color/azulbotao"
        android:text="@string/BtnDoar"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/BtnBrinquedosDoados"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/logincadastro2" />

    <Button
        android:id="@+id/BtnBrinquedosDoados"
        android:layout_width="268dp"
        android:layout_height="65dp"
        android:layout_marginStart="109dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="109dp"
        android:backgroundTint="@color/azulbotao"
        android:text="@string/BtnBrinquedosDoados"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BtnDoar" />

    <ImageView
        android:id="@+id/imgPersonagens"
        android:layout_width="147dp"
        android:layout_height="180dp"
        android:layout_marginStart="238dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="26dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/usuario"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="231dp"
        android:layout_height="137dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="9dp"
        android:layout_marginBottom="28dp"
        app:layout_constraintBottom_toBottomOf="@+id/txtusuariodescr"
        app:layout_constraintEnd_toStartOf="@+id/imgPersonagens"
        app:layout_constraintHorizontal_bias="0.277"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/usuariotitle" />

    <TextView
        android:id="@+id/txtusuariodescr"
        android:layout_width="226dp"
        android:layout_height="56dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="124dp"
        android:text="@string/txtusuariodescr"
        app:layout_constraintBottom_toTopOf="@+id/logincadastro2"
        app:layout_constraintEnd_toStartOf="@+id/imgPersonagens"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>